<Window x:Name="Form" x:Class="ConfigurableIrcBotApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigurableIrcBotApp"
        Closing="MainWindow_Closing"
        mc:Ignorable="d"
        Title="Bot Configuration" Height="375" Width="850">
    <Grid x:Name="grid" HorizontalAlignment="Left" Height="325" Margin="10,10,0,0" VerticalAlignment="Top" Width="825">
        <Label x:Name="ipLabel" Content="IP:" HorizontalAlignment="Left" Margin="49,8,0,0" VerticalAlignment="Top"/>
        <Label x:Name="portLabel" Content="Port:" HorizontalAlignment="Left" Margin="38,34,0,0" VerticalAlignment="Top"/>
        <Label x:Name="channelLabel" Content="Channel:" HorizontalAlignment="Left" Margin="16,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.847,0.429"/>
        <Label x:Name="userNameLabel" Content="Username:" HorizontalAlignment="Left" Margin="6,86,0,0" VerticalAlignment="Top"/>
        <Label x:Name="passwordLabel" Content="OAuth:" HorizontalAlignment="Left" Margin="25,112,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ip" HorizontalAlignment="Left" Height="23" Margin="77,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="port" HorizontalAlignment="Left" Height="23" Margin="77,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="numberValidation"/>
        <TextBox x:Name="channel" HorizontalAlignment="Left" Height="23" Margin="77,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="23" Margin="77,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="23" Margin="77,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AcceptsReturn="True"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Margin="122,146,0,0" VerticalAlignment="Top" Width="75" Click="connectButton_Click" />
        <Button x:Name="disconnectButton" Content="Disconnect" HorizontalAlignment="Left" Margin="122,171,0,0" VerticalAlignment="Top" Width="75" Click="disconnectButton_Click"/>
        <Button x:Name="saveSettingsButton" HorizontalAlignment="Left" Margin="30,146,0,0" VerticalAlignment="Top" Width="80" Height="45" Click="saveSettingsButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Save Settings as Default</TextBlock>
        </Button>
        <Label x:Name="moderatorsLabel" Content="Add/Remove Moderators" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="moderatorInput" HorizontalAlignment="Left" Height="23" Margin="16,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="moderatorAdd" Content="Add mod" HorizontalAlignment="Left" Margin="16,273,0,0" VerticalAlignment="Top" Width="75" Click="moderatorAdd_Click"/>
        <Button x:Name="moderatorRemove" Content="Remove mod" HorizontalAlignment="Left" Margin="114,273,0,0" VerticalAlignment="Top" Width="75" Click="moderatorRemove_Click"/>
        <TextBox x:Name="authLevelBox" HorizontalAlignment="Left" Height="23" Margin="114,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" PreviewTextInput="numberValidation"/>
        <Label x:Name="moderatorUserNameLabel" Content="Username:" HorizontalAlignment="Left" Margin="10,219,0,0" VerticalAlignment="Top"/>
        <Label x:Name="moderatorAuthLabel" Content="Auth Level:" HorizontalAlignment="Left" Margin="114,219,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.538"/>
        <Label x:Name="motdLabel" Content="Set Message of the Day" HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="motdInput" HorizontalAlignment="Left" Height="70" Margin="232,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="motdButton" Content="Set MOTD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="232,115,0,0" Click="motdButton_Click"/>
        <Button x:Name="clearMotdButton" Content="Clear MOTD" HorizontalAlignment="Left" Margin="336,115,0,0" VerticalAlignment="Top" Width="75" Click="clearMotdButton_Click"/>
        <Label x:Name="streamInfoLabel" Content="Set Stream Information" HorizontalAlignment="Left" Margin="227,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="streamInfoInput" HorizontalAlignment="Left" Height="70" Margin="232,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="streamInfoButton" Content="Set Info" HorizontalAlignment="Left" Margin="232,245,0,0" VerticalAlignment="Top" Width="75" Click="streamInfoButton_Click"/>
        <Button x:Name="clearStreamInfoButton" Content="Clear Info" HorizontalAlignment="Left" Margin="336,245,0,0" VerticalAlignment="Top" Width="75" Click="clearStreamInfoButton_Click"/>
        <Label x:Name="commandsLabel" Content="Edit Commands" HorizontalAlignment="Left" Margin="421,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="commandLabel" Content="Command:" HorizontalAlignment="Left" Margin="449,31,0,0" VerticalAlignment="Top"/>
        <Label x:Name="responseLabel" Content="Response:" HorizontalAlignment="Left" Margin="454,82,0,0" VerticalAlignment="Top"/>
        <Label x:Name="authLabel" Content="Authorization:" HorizontalAlignment="Left" Margin="433,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="commandInput" HorizontalAlignment="Left" Height="23" Margin="517,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <TextBox x:Name="authInput" HorizontalAlignment="Left" Height="23" Margin="517,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" PreviewTextInput="numberValidation"/>
        <TextBox x:Name="responseInput" HorizontalAlignment="Left" Height="79" Margin="517,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <Button x:Name="commandButton" Content="Add Command" HorizontalAlignment="Left" Margin="723,60,0,0" VerticalAlignment="Top" Width="92" Click="commandButton_Click"/>
        <Button x:Name="clearCommandButton" HorizontalAlignment="Left" Margin="723,115,0,0" VerticalAlignment="Top" Width="92" Click="clearCommandButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Remove Command</TextBlock>
        </Button>
        <Label x:Name="chatLabel" Content="Active Chat:" HorizontalAlignment="Left" Margin="444,173,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="sendMessageBox" HorizontalAlignment="Left" Height="23" Margin="517,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" KeyDown="enterSendMessage"/>
        <Button x:Name="sendMessageButton" Content="Send" HorizontalAlignment="Left" Margin="723,260,0,0" VerticalAlignment="Top" Width="92" Click="sendMessageButton_Click"/>
        <RichTextBox x:Name="chatTextBox" HorizontalAlignment="Left" Height="83" VerticalAlignment="Top" Width="199" Margin="517,171,0,0" IsReadOnly="True">
            <FlowDocument>
                <Paragraph Margin="0">
                    <Run/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>

</Window>
