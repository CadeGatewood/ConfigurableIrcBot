<Window x:Class="ConfigurableIrcBotApp.PopOutChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigurableIrcBotApp"
        mc:Ignorable="d"
        Closing="popoutChat_Closing"
        Title="Chat" Background="#323232"  Height="500" Width="353.333">
    <Grid>
        <RichTextBox x:Name="TitleBlock" Background="#323232" IsReadOnly="True" Margin="0,10,0,344" HorizontalContentAlignment="Center" VerticalAlignment="Center" Height="115"/>
        <RichTextBox x:Name="chatBlock" Background="#323232" Margin="10,130,125,0" IsReadOnly="True"/>

        <TextBlock x:Name="clockTxt" Margin="225,130,2,269" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.507,0.481"/>

    </Grid>
</Window>
