<Window x:Class="ConfigurableIrcBotApp.PopOutChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigurableIrcBotApp"
        mc:Ignorable="d"
        Closing="popoutChat_Closing"
        Title="Chat" Background="#323232"  Height="668.333" Width="353.333">
    <Grid>
        <Label x:Name="titleBlock" Background="#323232" Margin="0,10,0,0" Height="115" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top"/>
        <RichTextBox x:Name="chatBlock" Background="#323232" Margin="10,0,125,0" IsReadOnly="True" Height="396" VerticalAlignment="Bottom"/>

        <TextBox x:Name="clockTxt" Margin="10,157,125,396" Background="#323232" HorizontalContentAlignment="Center"  IsReadOnly="True" VerticalContentAlignment="Center" RenderTransformOrigin="0.507,0.481"/>

    </Grid>
</Window>
