<Window x:Class="ConfigurableIrcBotApp.PopOutChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigurableIrcBotApp"
        mc:Ignorable="d"
        Title="Chat" Background="#323232"  Height="300" Width="150">
    <Grid>
        <DockPanel>
            <RichTextBox x:Name="popoutChatTextBox"  Background="#323232" IsReadOnly="True" TextChanged="chatTextBox_TextChanged" Width="142">
                <FlowDocument>
                    <Paragraph Margin="0">
                        <Run/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </DockPanel>
    </Grid>
</Window>
